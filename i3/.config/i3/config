# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  i3bar_command i3bar --transparency
  colors {
    background #010101
    #statusline #aaaaaa
    statusline $primary
    separator  #444554

    #focused_workspace  #83CAFA #51A2DA #FFFFFF
    focused_workspace  #83CAFA $primary #FFFFFF
    active_workspace   #3C6EB4 #294172 #FFFFFF
    #inactive_workspace #8C8C8C #4C4C4C #888888
    inactive_workspace #8C8C8C $secondary #888888
    urgent_workspace   #EC69A0 #DB3279 #FFFFFF
    binding_mode       #b691d3 #A07CBC #FFFFFF
  }
  font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
  font pango: JetBrains Mono Nerd Font Bold 8px

  separator_symbol ⁞

  # Obey Fitts's law
  tray_padding 0

  # Height in pixels
  height 18

  #workspace_min_width 40

  # show status bar when Mod1 is pressed
  # mode dock|hide|invisible || hidden_state hide|show || modifier <Modifier>|none
  mode dock
  hidden_state hide
  modifier Mod1

  status_command i3status
}

